# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=universal_data

# Mongo Express Configuration
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=your_secure_mongo_express_password_here

# API Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Security
MONGODB_SSL=false
MONGODB_AUTH_SOURCE=admin

# CORS Configuration
CORS_ORIGIN=http://localhost:8080
CORS_CREDENTIALS=true

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000

# Generate secure passwords for production:
# MONGO_PASSWORD=$(openssl rand -base64 32)
# MONGO_EXPRESS_PASS=$(openssl rand -base64 16)
# JWT_SECRET=$(openssl rand -base64 64)
# SESSION_SECRET=$(openssl rand -base64 32)
